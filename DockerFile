FROM ros:jazzy-ros-base

RUN apt-get update && apt-get install -y --no-install-recommends \
    python3-colcon-common-extensions python3-argcomplete \
    build-essential git curl && rm -rf /var/lib/apt/lists/*

# FastAPI + Uvicorn via pip (PEP 668 override OK in a container)
RUN apt-get update && apt-get install -y --no-install-recommends python3-pip && \
    pip3 install --no-cache-dir --break-system-packages fastapi uvicorn && \
    rm -rf /var/lib/apt/lists/*
    
WORKDIR /ws
COPY entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

# ⬇️ copy the autostart script
COPY run.sh /run.sh
RUN chmod +x /run.sh

ENTRYPOINT ["/entrypoint.sh"]
# ⬇️ run the launch file on container start
CMD ["bash", "/run.sh"]
